<h1>Liste des contacts</h1>

<%= params.inspect %>

<% if flash[:good] %>
<ul>
  <% flash[:good].each do |g| %>
					<li>
					<h3><%= g['firstname'] %></h3>
					<h5><%= g['lastname'] %></h5>
					<h5><%= g['email'] %></h5>
					</li>
  <% end %>
</ul>
<% end %>

